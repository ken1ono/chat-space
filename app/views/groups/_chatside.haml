.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        = current_user.name
      .chat-side__user--new-group
        =link_to new_group_path do
          %i.fa.fa-pencil-square-o
      .chat-side__user--edit-user
        =link_to "/users/#{current_user.id}/edit" do
          %i.fa.fa-cog
  .chat-side__groups
    .chat-side__groups-list
      - @groups.each do |group|
        =link_to group_messages_path(group_id: group.id) do
          .chat-side__group
            .chat-side__group-name
              = group.name
            .chat-side__group-message
              メッセージ
